extends ../layout.pug

block content
    login-component
    script(type="text/x-template" id="login-component")
        .row
            .card.col.s4.offset-s4
                form(@submit.prevent="submit")
                    .input-field
                        input#email.validate(type='email', name='email', v-model="email")
                        label(for="email") Email
                    .input-field
                        input#password.validate(type='password', name='password', v-model="password")
                        label(for="password") Password
                    button.waves-effect.waves-light.btn.col.s2.offset-s5(type='submit')
                        | Submit
                        i.material-icons.right send
