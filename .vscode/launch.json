    "version": "0.2.0",
    "configurations": [
        {
        "name": "WebServer",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/app.ts",
        "stopOnEntry": false,
        "args": [],
        // "cwd": "${workspaceRoot}/web",
        "runtimeExecutable": null,
        "runtimeArgs": [
            "--nolazy"
        ],
        "env": {
            "NODE_ENV": "development"
        },
        "externalConsole": false,
        "sourceMaps": true,
        "outDir": "${workspaceRoot}/bin/",
        "smartStep":true
},
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}